#!/usr/bin/env emacs --script

(let ((current-directory (file-name-directory load-file-name)))
  (setq github-clone-test-path (expand-file-name "." current-directory))
  (setq github-clone-root-path (expand-file-name ".." current-directory)))

(add-to-list 'load-path github-clone-root-path)
(add-to-list 'load-path github-clone-test-path)

(dolist (test-file (or argv (directory-files github-clone-test-path t "-test.el$")))
  (load test-file nil t))

(ert-run-tests-batch-and-exit t)
